<section>
  <div class=" container row flex-d justify-content-center">
    <div class="ml-5 col-md-6">
      <h2 class="text-center mt-5">Add Coupon</h2>
      <form action="/admin/add-coupon" method="post">
        <label for="">Coupon</label>
        <input type="text" name="coupon" class="form-control" required>
        <label for="">Discount Amount</label>
