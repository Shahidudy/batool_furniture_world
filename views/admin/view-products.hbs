<head>

<body>


    <!-- Left Panel -->

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">
        {{!-- <a class="text-center btn btn-success float-right  mt-5" href="/admin/add-products">Add Product</a> --}}


        <!-- Header-->

        <div class="breadcrumbs">
            <div class="breadcrumbs-inner">
                <div class="row m-0">
                    <div class="col-sm-4">
                        <div class="page-header float-left">
                            <div class="page-title">
                                <h1>VIEW ALL PRODUCTS</h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="page-header float-right">
                            <div class="page-title">
                                {{!-- <ol class="breadcrumb text-right">
                                    <li><a href="#">PRODUCTS</a></li>
                                    <li><a href="#">Table</a></li>
                                    <li class="active">Data table</li>
                                </ol> --}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="content">
            <div class="animated fadeIn">
                <div class="row">

                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                {{!-- <strong class="card-title">Data Table</strong> --}}
                            </div>
                            <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names.." title="Type in a name">

                            <div class="card-body">
                                <table id="myTab" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            {{!-- <th>No</th> --}}
                                            <th>Products</th>
                                            <th>Catagory</th>
                                            <th>Description</th>
                                            <th>Price</th>
                                            <th>Image</th>
                                            <th>Product Manage</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each products}}
                                        <tr>
                                            {{!-- <td>{{@index}}</td> --}}
                                            <td>{{this.product}}</td>
                                            <td>{{this.catagory}}</td>
                                            <td>{{this.description}}</td>
                                            <td>{{this.price}}</td>
                                            <td><img style="height: 50px; weight: 50px;"
                                                    src="/images/{{this._id}}.jpg" alt=""></td>
                                            <td>
                                                <a href="/admin/edit-product/{{this._id}}"
                                                    class="btn btn-primary">Edit</a>

                                                <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                                                    onclick=" return confirm('Are you want to delete {{this.product}} ?')">Delete</a>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- .animated -->
        </div><!-- .content -->




    </div><!-- /#right-panel -->

    <!-- Right Panel -->




</body>

<script>
function myFunction() {
  var input, filter, table, tr, td, i, txtValue;
  input = document.getElementById("myInput");
  filter = input.value.toUpperCase();
  table = document.getElementById("myTab");
  tr = table.getElementsByTagName("tr");
  for (i = 0; i < tr.length; i++) {
    td = tr[i].getElementsByTagName("td")[0];
    if (td) {
      txtValue = td.textContent || td.innerText;
      if (txtValue.toUpperCase().indexOf(filter) > -1) {
        tr[i].style.display = "";
      } else {
        tr[i].style.display = "none";
      }
    }       
  }
}
</script>


</html>