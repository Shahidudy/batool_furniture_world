<section>
  <div class="main-body ">
    {{#with userSignupDetails}}



    <div class="row gutters-sm mt-5">
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              <div class="mt-3">
                <h4>Personal Information</h4>
                <hr>
              </div>
              <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle"
                width="150">
              <div class="mt-3">
                <h4>Hi,{{this.name}}</h4>
                <p>{{this.email}}</p>
                <p>{{this.mobile}}</p>
                <br>

                <br>
                <ul>
                  <div>
                    <h5>Welcome to Furniture World</h4>
                  </div>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-8 mt-1">
        {{/with}}

        <section>
          <div class="accordion" id="accordionExample">
            {{#each userAddress}}
            <div class="card">
              <div class="card-header" id="headingOne">
                <h2 class="mb-0">
                  <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse"
                    data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Address:{{inc @index}}
                  </button>
                </h2>
              </div>

              <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body">
                  <p>Name:{{this.name}}</p>
                  <p>Email:{{this.email}}</p>
                  <p>Mobile:{{this.mobile}}</p>

                  <p>Address:{{this.address}}</p>
                  <p>Town/City:{{this.town}}</p>
                  <p>District:{{this.district}}</p>
                  <p>State:{{this.state}}</p>
                  <p>Pincode:{{this.pincode}}</p>
                </div>

                <div style="float: right;">
                  <a href="/delete-address/{{this.id}}" class="btn btn-danger"
                    onclick="return confirm('Are you sure want to delete {{this.name}} ?')">Delete</a>

                </div>
                <div style="float: right;">
                  {{!-- <a href="" class="btn btn-success">Edit</a> --}}
                  <button type="button" class="btn btn-success btn-block text-left" data-toggle="modal"
                    data-target="#edit">
                    Edit
                  </button>
                </div>

              </div>

            </div>


            <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
              aria-hidden="true">
              <div class="modal-dialog" role="document">
                <form action="/edit-address/{{this.id}}" method="post">
                  <div class="modal-content">
                    <div class="modal-header text-center">
                      <h4 class="modal-title w-100 font-weight-bold">Edit Address</h4>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body mx-3">
                      <div class="md-form mb-5">
                        {{!-- <i class="bi bi-person-fill"></i> --}}
                        <input type="text" id="name" class="form-control validate" name="name"
                          placeholder="{{this.name}}" value="{{this.name}}">
                        <label data-error="wrong" data-success="right" for="orangeForm-name">Your name</label>
                      </div>
                      <div class="md-form mb-5">
                        {{!-- <i class="bi bi-person-fill"></i> --}}
                        <input type="text" id="name" class="form-control validate" name="email"
                          placeholder="{{this.email}}" value="{{this.email}}">
                        <label data-error="wrong" data-success="right" for="orangeForm-name">Email</label>
                      </div>
                      <div class="md-form mb-5">
                        {{!-- <i class="bi bi-person-fill"></i> --}}
                        <input type="text" id="name" class="form-control validate" name="mobile"
                          placeholder="{{this.mobile}}" value="{{this.mobile}}">
                        <label data-error="wrong" data-success="right" for="orangeForm-name">Mobile</label>
                      </div>


                      <div class="md-form mb-4">
                        {{!-- <i class="fas fa-lock prefix grey-text"></i> --}}
                        <input type="text" id="address" class="form-control validate" name="address"
                          value="{{this.address}}">
                        <label data-error="wrong" data-success="right" for="orangeForm-pass">Address</label>
                      </div>
                      <div class="md-form mb-4">
                        {{!-- <i class="fas fa-lock prefix grey-text"></i> --}}
                        <input type="text" id="town" class="form-control validate" name="town" value="{{this.town}}">
                        <label data-error="wrong" data-success="right" for="orangeForm-pass">Town/City</label>
                      </div>
                      <div class="md-form mb-4">
                        {{!-- <i class="fas fa-lock prefix grey-text"></i> --}}
                        <input type="text" id="district" class="form-control validate" name="district"
                          value="{{this.district}}">
                        <label data-error="wrong" data-success="right" for="orangeForm-pass">District</label>
                      </div>
                      <div class="md-form mb-4">
                        {{!-- <i class="fas fa-lock prefix grey-text"></i> --}}
                        <input type="text" id="pincode" class="form-control validate" name="pincode"
                          value="{{this.pincode}}">
                        <label data-error="wrong" data-success="right" for="orangeForm-pass">Pincode</label>
                      </div>
                      <div class="md-form mb-4">
                        {{!-- <i class="fas fa-lock prefix grey-text"></i> --}}
                        <input type="text" id="state" class="form-control validate" name="state" value="{{this.state}}">
                        <label data-error="wrong" data-success="right" for="orangeForm-pass">State</label>
                      </div>

                    </div>

                    <div class="modal-footer d-flex justify-content-center">
                      <button type="submit" class="btn btn-deep-orange">Submit</button>
                    </div>

                  </div>
              </div>
              </form>
            </div>


            {{/each}}
          </div>
        </section>




      </div>


    </div>



    <div class="row  gutters-sm ">



      <div class="col-md-4 mb-5">
        <div class="card-body p-0">
          <ul
            class="list-group list-group-flush rounded-3 list-group-item d-flex justify-content-between align-items-center">
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">

              <a href="" class="btn btn-link btn-block text-left" data-toggle="modal"
                data-target="#modalRegisterForm">Edit Profile</a>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">

              <a href="" class="btn btn-link btn-block text-left" data-toggle="modal" data-target="#RegisterForm">Change
                Password</a>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <div>
                <button type="button" class="btn btn-link btn-block text-left" data-toggle="modal"
                  data-target="#staticBackdrop1">
                  Add Address
                </button>

              </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <div>
                <a href="/order-success" class="btn btn-link btn-block text-left">My orders</a>
              </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <div>
                <a href="/cart" class="btn btn-link btn-block text-left">My Cart</a>
              </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <div>
                <a href="/wishlist" class="btn btn-link btn-block text-left">My Wishlist</a>
              </div>
            </li>




            <!-- Modal -->

            </li>
          </ul>
        </div>
      </div>

    </div>

  </div>

</section>


